#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* my_capitalize(char* a) {
    //char* my_upcase= strdup(a);
    int len = strlen(a);

    for(int i = 0;i < len;++i) {
        if(a[i]>= 'A' && a[i] <= 'Z') {
            a[i] = (char)(a[i]- (int)'A' + (int)'a');
        }
    }
    for(int i = 0;i < len;++i) {
        if(a[i]>= 'a' && a[i]<= 'z') {
            a[i]= (char)(a[i] - (int)'a' +(int) 'A');
            break;
        }
    }

    return a;
}

//index
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int my_string_index(char* a, char* b) {
    int start;
    int end;
    
    for (int i=0; i<=strlen(a); i++){
        start =i;
        end = i+strlen(b-1);
        int s = 1; 
        for (int j=start; j<=end; j++){
            if (a[j]!=b[j-start]){
                s = 0;
            }
        }
        if (s == 1) return start;
    }
    return(-1);
}

//downcase
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* my_downcase(char* a) {
    //char* my_upcase= strdup(a);
    int len = strlen(a);
    for (int i = 0; i < len; ++i) {
        if (a[i] >= 'A' && a[i] <= 'Z') {
            a[i] = (char)(a[i] - (int)'A' + (int)'a');
        }
    }
    return a;
}

// reverse string.
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* reverse_string(char* a) {
    int len = strlen(a);
    for(int l = 0,r = len - 1;l < r; l++,r--){
        char tmp= a[l];
        a[l]= a[r];
        a[r]= tmp;
    }
    return a;
}
//strcmp
int my_strcmp(char* a, char* b) {
    int l1= strlen(a);
    int l2= strlen(b);
    if (l1>l2) return -1;
    if (l1<l2) return 1;
    if (l1== l2) return 0;
  return 0;
}
//strcopy
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
char* my_strcpy(char* a, char* b) {
  int l1= strlen(a);
  int l2= strlen(b);
  //if (a== NULL)
  //return NULL;
  char* ptr=a;
  while (*b != '\0'){
      *a = *b;
      a++;
      b++;
  }
  *a = '\0';
  return ptr;
  //char* c = (char*) malloc(l2 * sizeof(char));
  //for (int i = 0; i < l2; ++i) c[i] = b[i];
  //a = c;
  //return a;
}
//strncpy
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
char* my_strncpy(char* a, char* b, int c) {
    int l1= strlen(a);
    int l2= strlen(b);
  //if (a== NULL)
  //return NULL;
  char* ptr=a;
  while (*b && c--){
      *a = *b;
      a++;
      b++;
  }
  *a = '\0';
  return ptr;
}
//strrchr
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
char* my_strrchr(char* a, char b) {
    int l1= strlen(a);
    for (int i=l1-1; i>=0; i--){
        if (a[i]==b){
            return (char *)(a + i * sizeof(char));
        } 
    }
    return NULL;
}
//strstr
//index
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
char* my_strstr(char* a, char* b) {
    int start;
    int end;
    
    for (int i=0; i<strlen(a); i++){
        start =i;
        end = i+strlen(b) - 1;
        int s = 1; 
        for (int j=start; j<=end; j++){
            if (a[j]!=b[j-start]){
                s = 0;
            }
        }
        if (s == 1) return (char *)(a + i * sizeof(char));
    }
    return NULL;
}
//#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h> 

bool my_is_sort(integer_array* a) {
   bool inc = 1;
   bool dec = 1;
  //len = strlen(a);
  int len = a -> size;
  int* arr = a -> array;
  for (int i = 0; i < len-1; ++i) {
      if (arr[i]<arr[i+1])
        dec=0;
      if (arr[i]>arr[i+1])
        inc = 0;
  }
  if (inc == 1) return 1;
  if (dec == 1)return 1;
  return 0;
}


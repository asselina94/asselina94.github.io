#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* my_capitalize(char* a) {
    //char* my_upcase= strdup(a);
    int len = strlen(a);
    for (int i = 0; i < len; ++i) {
        if (a[i] >= 'A' && a[i] <= 'Z') {
            a[i] = (char)(a[i] - (int)'A' + (int)'a');
            a[0] = (char)( (int)'A');

        }
    }
    return a;
}

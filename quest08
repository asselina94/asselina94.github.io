#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int hidenp(char* param_1, char* param_2) {
    int l1 = strlen (param_1);
    int l2 = strlen (param_2);
    int i=0;
    int j=0;
        if(l1 == 0)
            return 1;

    while( i <l1 && j<l2){
        if(param_1[i] == param_2[j]){
            i++;
        }
        if(l1==i){
        return 1;
        }
        j++;
    }
    return 0;
}

2)
string_array* my_split(char* param_1, char* param_2) {
    int l1= strlen(param_1);
    int l2 = strlen(param_2);
    string_array* ans = malloc(sizeof(string_array*));
    if (l1 == 0 || l2 == 0) return ans;
    ans -> array = malloc(100 * sizeof(char**));
    int index = 0;
    ans->array[index] = malloc(100 * sizeof(char*));
    for (int i = 0; i < l1; ++i) {
        if (param_1[i] == param_2[0]) {
            index ++;
            ans->array[index] = malloc(100 * sizeof(char*));
        } else {
            int len = strlen(ans->array[index]);
            ans->array[index][len] = param_1[i];
        }
    }
    ans -> size = index + 1;
    return ans;
}

3)
char* my_strip(char* param_1) {
    int len = strlen(param_1);
    char* ans= malloc(len*sizeof(char*));
    int l = 0, r = len - 1, ansi = 0;
    while (l < len && param_1[l] == ' ') l ++;
    while (r >= 0 && param_1[r] == ' ') r --;
    for (int i = l; i <= r; i++) {
        if (param_1[i] != ' ') {
            ans[ansi ++] = param_1[i];
        } else {
            ans[ansi ++] = ' ';
            while(i < len && param_1[i] == ' ') i ++;
            i --;
        }
    }
    return ans;
}

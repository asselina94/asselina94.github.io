#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int my_iterative_pow(int a, int b) {
    if(b==0){
        return 0;
    }
    else{
        int c = 1;
        for(int i=1; i<=b; i++)
    {   
        c = c * a;  
    }
        //printf("%d",c); 
        return c;  
    }
    //printf("%d",c);
    //return c;
}
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>
char* rcapitalize (char* param_1) {
    int len = strlen(param_1);
    int i = 0;
    while (i < len) {
        if (param_1[i] != ' ') {
            while (i < len && param_1[i] != ' ') {
                if (param_1[i] >= 'A' && param_1[i] <= 'Z') param_1[i] += -(int)'A' + (int)'a';
                i++;
            }
            if (param_1[i - 1] >= 'a' && param_1[i - 1] <= 'z') 
                param_1[i - 1] += -(int)'a' + (int)'A';
        } else i++;
    }
    return param_1;
}


#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>
char* rcapitalize (char* param_1) {
    int len = strlen(param_1);
    int start=-1;
    int end =0;
    for( int i=0; i<len; i++){
        int buk = param_1[i];
        if (buk != ' ')
            start=i;
        if (buk == ' '  buk=='.')
            end=i;
        for (int j=param_1[start]; j<= param_1[end]; j++){
            if (param_1[j] >= 'A' && param_1[i] <= 'Z') 
                param_1[j] += -(int)'A' + (int)'a';
        }
            //if ( param_1[end]>= 'a' && param_1[i - 1] <= 'z') 
            param_1[end]=(char)(param_1[end]- (int)'a' + (int)'A');
    }
    start=-1; end=0;
    return param_1;
}

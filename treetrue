#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int ac, char **av){
    int number_layers = atoi(av[1]);
    int a[100], b[100];
    a[0] = 0;
    a[1] = 4;
    for (int i = 2, j = 3; i < number_layers; i += 2, j ++) {
        a[i] = a[i - 1] + j * 2;
        a[i + 1] = a[i] + j * 2;
    }
    for (int i = 0, c = 3; i < number_layers; ++i, ++c)
        b[i] = a[i] + 1 + c * 2;
    for (int layer = 0; layer < number_layers; ++layer) {
        int row = layer + 4;
        int last = a[layer];
        int step = (b[number_layers - 1] - b[layer]) / 2;
        for (int i = 1; i <= row; i++){
            for(int j = 0; j< step + row - i; j++) printf(" ");
            for(int z = 0; z < last + (i - 1) * 2 + 1; z++) printf("*");
            printf("\n");
        }
    }
    for (int i = 0; i < number_layers; ++i) {
        for (int j = 0; j < (b[number_layers - 1] - number_layers + 1) / 2; ++j) printf(" ");
        for (int j = 0; j < number_layers; ++j) printf("|");
        printf("\n");
    }

}
